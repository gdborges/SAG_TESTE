@model SagPoc.Web.Models.MovementMetadata
@using SagPoc.Web.Models
@{
    var gridId = $"movement-grid-{Model.CodiTabe}";
    var columns = Model.GetGridColumns();

    // Se não há colunas configuradas, usa placeholder
    var hasConfiguredColumns = columns.Count > 0;
}

<div class="movement-grid-container" id="@gridId" data-movement="@Model.CodiTabe">
    @* Loading overlay *@
    <div class="movement-loading d-none" id="loading-@Model.CodiTabe">
        <div class="d-flex justify-content-center align-items-center py-4">
            <div class="spinner-border spinner-border-sm me-2" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <span>Carregando dados...</span>
        </div>
    </div>

    @* Tabela do grid *@
    <div class="table-responsive movement-grid-wrapper">
        <table class="table table-bordered table-striped table-hover table-sm movement-grid-table"
               id="table-@Model.CodiTabe"
               data-movement-table="@Model.CodiTabe"
               data-sag-component="DBG@(Model.CodiTabe)">
            <thead class="table-light">
                <tr>
                    @if (hasConfiguredColumns)
                    {
                        @foreach (var col in columns)
                        {
                            <th style="width: @(col.Width)px;">@col.DisplayName</th>
                        }
                    }
                    else
                    {
                        @* Colunas serão preenchidas dinamicamente *@
                        <th>Carregando colunas...</th>
                    }
                </tr>
            </thead>
            <tbody id="tbody-@Model.CodiTabe">
                <tr class="text-center text-muted empty-row" id="empty-@Model.CodiTabe">
                    <td colspan="@(hasConfiguredColumns ? columns.Count : 1)">
                        <div class="py-4">
                            <i class="bi bi-inbox fs-2 d-block mb-2 text-secondary"></i>
                            <span>Nenhum registro</span>
                            <br />
                            <small class="text-muted">Clique em "Novo" para adicionar</small>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    @* Paginação *@
    <nav class="movement-pagination mt-2 d-none" id="pagination-@Model.CodiTabe" aria-label="Paginação">
        <div class="d-flex justify-content-between align-items-center">
            <div class="pagination-info small text-muted">
                Mostrando <span id="page-info-@Model.CodiTabe">0</span> de <span id="total-info-@Model.CodiTabe">0</span> registros
            </div>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item" id="prev-@Model.CodiTabe">
                    <a class="page-link" href="#" data-page="prev" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active" id="current-page-@Model.CodiTabe">
                    <span class="page-link">1</span>
                </li>
                <li class="page-item" id="next-@Model.CodiTabe">
                    <a class="page-link" href="#" data-page="next" aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</div>
