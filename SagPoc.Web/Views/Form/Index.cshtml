@model Dictionary<int, string>
@{
    ViewData["Title"] = "Formulários Disponíveis";
}

<div class="container mt-4">
    <h1 class="mb-4">Formulários Disponíveis</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Selecione um formulário</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var table in Model.OrderBy(t => t.Key))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>@table.Key</strong> - @table.Value
                            </span>
                            <a asp-action="Render" asp-route-id="@table.Key" class="btn btn-primary btn-sm">
                                Abrir
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">POC - Renderizador Dinâmico</h5>
                    <p class="card-text">
                        Este é um protótipo para renderização dinâmica de formulários
                        baseado nos metadados da tabela <code>SistCamp</code>.
                    </p>
                    <hr />
                    <p class="mb-0">
                        <strong>Tabela de teste:</strong> 210 (TipDoc)<br />
                        <a asp-action="Render" asp-route-id="210" class="btn btn-success mt-2">
                            Testar Tabela 210
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
